<div class="row col-xs-10 col-sm-5 col-md-6 col-xs-offset-1">
    <div class="page-header">
        <h1 class="titles-blue">Animate y Registrate!</h1>
    </div>
    <div class="col-md-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
            <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
        </div>
        <br />
        <div>
            <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Contrasena" %>
        </div>
        <br />
        <% if devise_mapping.rememberable? %>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end %>
        <br /><br />
        <div>
            <button type="submit" class="btn btn-lg btn-block btn-primary text-xs">Ingresar con email</button>
        </div>
        <% end %>

        <%= render "users/shared/links" %>
    </div>
    <div class="col-md-6">
        <%= render "users/shared/social" %>
    </div>
</div>