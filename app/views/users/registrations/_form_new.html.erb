<div class="col-md-6 col-sm-5 col-xs-10 col-xs-offset-1">
	<div class="page-header">
	  <h1 class="titles-blue">Animate y Registrate!</h1>
	</div>		
	<div class="col-md-6">
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		 	<div>
		  		<%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
		  	</div>
			<br />
		  	
		  	<div>
		    	<%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Contraseña" %>
			</div>

			<br />

		  	<div>
		    	<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "Confirma tu Contraseña" %>
			</div>
			
			<br /><br />
		  
		  	<div>
		  		<button type="submit" class="btn btn-lg btn-block btn-primary text-xs">Registrarme con email</button>
		  	</div>
		<% end %>

		<%= render "users/shared/links" %>
	</div>
	
	<div class="col-md-6">
		<%= render "users/shared/social"%>
	</div>
</div>